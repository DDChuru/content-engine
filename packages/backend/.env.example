# TikTok Multilingual Pipeline - Environment Configuration

# Google Cloud API (for Veo video generation)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
# Optional: Google Cloud Project ID (required for Veo video generation)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id

# Veo Model Version (for AI video generation)
# Options: 3.0 (default, more widely available) or 3.1 (preview access required)
VEO_MODEL_VERSION=3.0

# Gemini API (for translation)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API (for voice generation)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# Optional: Default voice ID for testing (get from https://elevenlabs.io/voices)
ELEVENLABS_DEFAULT_VOICE_ID=your_voice_id_here

# Anthropic API (for AI-powered features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Firebase Admin SDK (for authentication)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY=your_private_key

# Server Configuration
PORT=3000
NODE_ENV=development

# Cost Limits (optional)
MAX_TRANSLATION_COST_PER_REQUEST=1.00
MAX_CHARACTERS_PER_REQUEST=1000000
